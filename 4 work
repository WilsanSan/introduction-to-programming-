#include <iostream>

int main()
{
    setlocale(LC_ALL, "ru");
    using namespace std;
    float dlin, shir, diametr;
    cout << "введите длину прямоугольника\n";
    cin >> dlin;
    cout << "Введите ширину прямоугольника\n";
    cin >> shir;
    cout << "\n";
    cout << "Площадь прямоугольника =" << dlin * shir << endl;
    cout << "Периметр прямоугольника = " << 2 * (dlin + shir) << endl;
    cout << "\n";
    cout << "введите диаметр окружности" << endl;
    cin >> diametr;
    float PI = 3.14;

    cout << "длина окружности равна - " << PI * diametr <<"\n"<< endl;

    cout << "Введите 2 числа" << endl;

    float first, second;

    cin >> first;
    cin >> second;

    cout << "Среднее арифметическое этих чисел = " << (first + second) / 2 <<"\n"<< endl;

    cout << "введите 2 ненулевых числа\n";
    float zerofirst, zerosecond;
    cin >> zerofirst;
    cin >> zerosecond;


    cout << "сумма =" << zerofirst + zerosecond << "\t" << "разность =" << zerofirst - zerosecond << "\t " << "произведение =" << zerofirst * zerosecond << endl;
    cout << "частное их квадратов = " << (zerofirst * zerofirst) / (zerosecond * zerosecond) << "\n" << "частное их модулей =" << (abs(zerofirst) / abs(zerosecond));
    cout << "\n";
    return 0;
}
